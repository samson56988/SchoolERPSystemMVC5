@model IEnumerable<SchoolERPSYSTEM.Models.TeacherDashboard>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Teacher.cshtml";
}

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Settings</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Staff</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title m-b-0"><i class="fas fa-users"></i> Staff</h5>
                    </div>



                    <div class="row">

                        <div class="card-body">


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Select Date</label>

                                        @Html.Editor("Attendancedate", new { htmlAttributes = new { @class = "form-control", type = "date", name = "Attendancedate" } })
                                    </div>

                                </div>
                            </div>

                            <table class="table table-bordered">

                                <thead class="thead-dark">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AdmissionNo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LastName)
                                        </th>

                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdmissionNo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FirstName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastName)
                                            </td>

                                            <td>
                                                <a href="@Url.Action("Present", "TeacherClass", new { id = item.id })" class="btn btn-mini btn-outline-orange icon-edit bigger-10"><img src="~/images/iconfinder_2701079_approve_check_complete_done_mark_icon_24px.png" /></a>
                                                <a href="@Url.Action("Present", "TeacherClass", new { id = item.id })" class="btn btn-mini btn-outline-orange icon-edit bigger-10"><img src="~/images/iconfinder_3855592_cancel_delete_remove_icon_24px.png"></a>

                                            </td>
                                        </tr>
                                    }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


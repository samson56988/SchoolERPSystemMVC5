@model IEnumerable<SchoolERPSYSTEM.Models.MStaff>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin.cshtml";
}



<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Settings</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Staff</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title m-b-0"><i class="fas fa-users"></i> Staff</h5>
                    </div>



                    <div class="row">

                        <div class="card-body">


                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <a href="@Url.Action("Create", "Staff")" class="btn btn-dark">
                                            <i class="fas fa-plus-square"></i>
                                            <span>
                                                <strong>Create</strong>
                                            </span>
                                        </a>

                                    </div>

                                </div>
                            </div>

                            <table class="table table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>
                                            <label>StaffID</label>
                                        </th>

                                        <th>
                                            <label>Designation Name</label>
                                        </th>
                                        <th>
                                            <label>Firstname</label>
                                        </th>
                                        <th>
                                            <label>Lastname</label>
                                        </th>


                                        <th>
                                            <label>Nationality</label>
                                        </th>

                                        <th>
                                            <label>Highest Qualification</label>
                                        </th>
                                        <th>
                                            <label>Gender</label>
                                        </th>
                                        <th>
                                            <label>Action</label>
                                        </th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StaffID)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.DesignationName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Firstname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Lastname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nationality)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.HighestQualification)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Gender)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Staff", new { id = item.StaffID })" class="btn btn-mini btn-outline-orange icon-edit bigger-10"><img src="~/images/iconfinder_314251_edit_document_icon_32px.png" /></a>
                                            <a href="@Url.Action("Details", "Staff", new { id = item.StaffID })" class="btn btn-mini btn-outline-dark icon-edit bigger-10"><img src="~/images/iconfinder_330401_about_details_help_info_information_icon_32px.png" /></a>
                                            <a href="@Url.Action("Delete", "Staff", new { id = item.StaffID })" class="btn btn-mini btn-outline-dark icon-edit bigger-10"><img src="~/images/iconfinder_23231_delete_icon_32px.png" /></a>



                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

  
</div>



